{
  "kind": "collectionType",
  "collectionName": "stops",
  "info": {
    "singularName": "stop",
    "pluralName": "stops",
    "displayName": "Stop",
    "description": "Individual stops within a route"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "type": {
      "type": "string",
      "required": true
    },
    "walkTime": {
      "type": "string",
      "required": false
    },
    "timeAtStop": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "address": {
      "type": "text",
      "required": false
    },
    "activities": {
      "type": "json",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "latitude": {
      "type": "decimal",
      "required": false
    },
    "longitude": {
      "type": "decimal",
      "required": false
    },
    "route": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::route.route",
      "inversedBy": "stops"
    }
  }
}