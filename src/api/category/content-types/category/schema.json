{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Categories for routes (Fragrance, Culture, Gastronomy, Fashion)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "cardImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "color": {
      "type": "string",
      "required": false
    },
    "displayMode": {
      "type": "enumeration",
      "enum": ["routes", "places"],
      "default": "routes",
      "required": true
    },
    "routes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::route.route",
      "mappedBy": "category"
    },
    "places": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::stop.stop",
      "mappedBy": "category"
    }
  }
}